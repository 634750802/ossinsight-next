{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "WebWorker"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": ["src/env.d.ts"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}